doctype 5
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")

        title Minventure - A Minimalist Adventure
        link(rel="stylesheet" href="/lib/normalize-css/normalize.css")
        != css('minventure')
        // HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
        // if lt IE 9
            <script src="bower_components/html5shiv/dist/html5shiv.js"></script>
            <script src="bower_components/respond/respond.min.js"></script>
    body
        #container
            #gameControls
                h1 Minventure
                a(href="#about") About
                a#save(href="#") Save
                a#load(href="#") Load
                a(href="#loot") Loot

            table#attributes
                tbody
                    tr
                        td Health
                        td
                            span#health
                            span &nbsp;/&nbsp;
                            span#maxHealth
                    tr
                        td Level
                        td#level
                    tr
                        td Experience
                        td#experience
                    tr
                        td Gold
                        td#money

            #encounter
                table
                    tr
                        td
                        td#description
                        td#limit

            #playerControls
                .controlRow
                    button#move Move!
                .controlRow
                    button#fight Fight!
                .controlRow
                    button#rest Rest!

            #status
                #line1
                #line2
                #line3
                #line4


        script(src="/lib/jquery/jquery.min.js")
        != js('minventure')